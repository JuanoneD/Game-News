<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Game News</title>

        <!-- Bootstrap -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

        <!-- Fonts log -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=New+Amsterdam&display=swap" rel="stylesheet">
        <link href="/css/index.css" rel="stylesheet">
</head>
<body data-bs-theme="light" id="body">
    <!-- Bootsptrap -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
    
    <script src="/script/index.js" ></script>


    <header class="shadow">
        <div class="navbar navbar-expand-lg bg-body-tertiary" >
            <div class="container-fluid">
                <a class="navbar-brand new-amsterdam-title" href="/<%=login?login.IDUser:''%>">
                    <img src="https://staging.cohostcdn.org/avatar/378-30af52f7-ed57-4d7d-b754-2c505be4692b-profile.png" alt="" height="60px">
                    Game News
                </a>
            </div>
            <div class="d-flex" id="Registers">
                <div class="container text-nowrap">
                    <a id="theme" onclick="ToggleTheme()" class="btn" style="font-size: 26px">☀️</a>
                    <%if(login){%>
                        <%if(login.Admin == 1){%><a  class="btn btn-primary" href="/WriteArticle/<%=login.IDUser%>">Escrever artigo</a><%}%>
                        <a  class="btn btn-primary" data-bs-toggle="modal"  data-bs-target="#UpdateUser">Editar</a>
                        <a  class="btn btn-danger" href="/logout">Deslogar</a>
                    <%}else{%>
                        <a class="btn btn-outline-success" data-bs-toggle="modal"  data-bs-target="#LoginInsert" >Criar conta</a>
                        <a class="btn btn-outline-success" data-bs-toggle="modal"  data-bs-target="#LoginUser" >Login</a>
                    <%}%>
                </div>
            </div>
        </div>
    </header>
    <main>
        <a class="btn btn-outline-success" data-bs-toggle="modal"  data-bs-target="#MethodInsert" >Adicionar Metodo de Pagamento</a>
        <a class="btn btn-outline-success" data-bs-toggle="modal"  data-bs-target="#SubscriptionInsert" >Adicionar Assinatura</a>
        <a class="btn btn-outline-success" data-bs-toggle="modal"  data-bs-target="#BenefitInsert" >Adicionar Beneficio</a>
    </main>


        <!-- Modals -->
        <div class="modal fade" id="BenefitInsert" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h2 class="modal-title">Cadastrar Beneficio de assinatura</h2>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form method="post"  action="/InsertBenefit/<%=login.IDUser%>">
                            <div class="mb-3">
                                <label for="Email" class="form-label">Descrição:</label>
                                <input type="text" class="form-control"  name="Description">
                            </div>
                            <button type="submit" class="btn btn-primary fw-bold text-uppercase">Cadastrar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>


        <div class="modal fade" id="SubscriptionInsert" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h2 class="modal-title">Cadastrar Assinatura</h2>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form method="post"  action="/InsertSub/<%=login.IDUser%>">
                            <div class="mb-3">
                                <label for="Email" class="form-label">Descrição:</label>
                                <input type="text" class="form-control"  name="Description">
                            </div>
                            <div class="mb-3">
                                <label for="Email" class="form-label">Preço:</label>
                                <input type="Number" class="form-control"  step="0.01" name="Price">
                            </div>
                            <button type="submit" class="btn btn-primary fw-bold text-uppercase">Cadastrar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>


        <div class="modal fade" id="MethodInsert" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h2 class="modal-title">Cadastrar metodo de pagamento</h2>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form method="post"  action="/InsertMethod/<%=login.IDUser%>">
                            <div class="mb-3">
                                <label for="Email" class="form-label">Descrição:</label>
                                <input type="text" class="form-control"  name="Description">
                            </div>
                            <button type="submit" class="btn btn-primary fw-bold text-uppercase">Cadastrar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>


        <div class="modal fade" id="LoginUser" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h2 class="modal-title">Entrar na sua conta</h2>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form method="post"  action="/login">
                            <div class="mb-3">
                                <label for="Email" class="form-label"  id="login_email">Email:</label>
                                <input type="text" class="form-control"  name="Email">
                            </div>
                            <div class="mb-3">
                                <label for="Password" class="form-label"  id="login_password" >Senha:</label>
                                <input type="password" class="form-control"  name="Password">
                            </div>
                            <button type="submit" class="btn btn-primary fw-bold text-uppercase">Logar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    
        <div class="modal fade" id="LoginInsert" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h2 class="modal-title">Entrar na sua conta</h2>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form method="post"  action="/">
                            <div class="mb-3">
                                <label for="Name" class="form-label">Nome:</label>
                                <input type="text" class="form-control" name="Name">
                            </div>
                            <div class="mb-3">
                                <label for="Email" class="form-label">Email:</label>
                                <input type="text" class="form-control"  name="Email">
                            </div>
                            <div class="mb-3">
                                <label for="Password" class="form-label">Senha:</label>
                                <input type="password" class="form-control"  name="Password">
                            </div>
                            <div class="mb-3">
                                <label for="PasswordConfirm" class="form-label">Confirmar senha:</label>
                                <input type="password" class="form-control"  name="PasswordConfirm">
                            </div>
                            <button type="submit" class="btn btn-primary fw-bold text-uppercase">Criar conta</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <%if(login){%>
            <div class="modal fade" id="UpdateUser" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h2 class="modal-title">Editar Conta</h2>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form method="post"  action="/Update/<%=login.IDUser%>">
                                <div class="mb-3">
                                    <label for="Name" class="form-label">Nome:</label>
                                    <input type="text" class="form-control"  value="<%=login.Name%>" name="Name">
                                </div>
                                <div class="mb-3">
                                    <label for="Email" class="form-label">Email:</label>
                                    <input type="text" class="form-control" value="<%=login.Email%>" name="Email">
                                </div>
                                <div class="mb-3">
                                    <label for="Password" class="form-label">Senha Antiga:</label>
                                    <input type="password" class="form-control"  name="Password">
                                </div>
                                <div class="mb-3">
                                    <label for="Password" class="form-label">Senha nova:</label>
                                    <input type="password" class="form-control"  name="PasswordNew1">
                                </div>
                                <div class="mb-3">
                                    <label for="PasswordConfirm" class="form-label">Confirmar senha:</label>
                                    <input type="password" class="form-control"  name="PasswordNew2">
                                </div>
                                <button type="submit" class="btn btn-primary fw-bold text-uppercase">Editar Conta</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        <%}%>
    
        
        <%if(error){%>
            <div class="modal fade" id="errora" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h2 class="modal-title">Erro:</h2>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <h3><%=error%></h3>
                        </div>
                    </div>
                </div>
            </div>
            <a data-bs-toggle="modal"  data-bs-target="#errora" id="inputerror" hidden></a>
            <script>
                document.getElementById('inputerror').click();
            </script>
            <%}%>
    
        <%if(message){%>
            <div class="modal fade" id="messagea" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body text-center">
                            <h3><%=message%></h3>
                        </div>
                    </div>
                </div>
            </div>
            <a data-bs-toggle="modal"  data-bs-target="#messagea" id="inputmessage" hidden></a>
            <script>
                document.getElementById('inputmessage').click();
            </script>
        <%}%>
</body>